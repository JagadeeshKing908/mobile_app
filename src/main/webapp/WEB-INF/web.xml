<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- ============================= -->
    <!-- Application Configuration -->
    <!-- ============================= -->

    <display-name>MobileSalesApp</display-name>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- ============================= -->
    <!-- Register Servlet -->
    <!-- ============================= -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.mobilesales.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- ============================= -->
    <!-- Login Servlet -->
    <!-- ============================= -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mobilesales.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- ============================= -->
    <!-- Logout Servlet -->
    <!-- ============================= -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.mobilesales.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- ============================= -->
    <!-- Admin - Product Servlet -->
    <!-- ============================= -->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.mobilesales.servlet.ProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>

    <!-- ============================= -->
    <!-- Session Configuration -->
    <!-- ============================= -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
